<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="lt.mikasdu.ui.controller.TasksController">

    <VBox alignment="CENTER">
        <Label styleClass="headerLabel" text="Tasks list"/>
    </VBox>
    <VBox styleClass="box-borders" style="-fx-padding: 5 5 5 5;">
        <HBox spacing="10">
            <Button text="Mark as Done" onAction="#markAsDone" />
            <Button text="New Task" fx:id="newTaskButton" visible="false" onAction="#newTask"/>
            <Button text="Edit Selected" fx:id="editTaskButton" styleClass="button-edit" visible="false" onAction="#editTask"/>
            <Button text="Delete selected" fx:id="deleteTaskButton" styleClass="button-remove" visible="false" onAction="#deleteTask"/>
        </HBox>
    </VBox>

    <TableView fx:id="tbData">
        <columns>
            <TableColumn fx:id="taskId" minWidth="30" maxWidth="300" text="ID"/>
            <TableColumn fx:id="taskDescription" text="Task"/>
            <TableColumn fx:id="userId" text="Assigned for user Id" />
            <TableColumn fx:id="taskStatus" text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
    </TableView>
</VBox>
